
<div class="modal fade" id="logInModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4><span class="glyphicon glyphicon-lock"></span> Login</h4>
      </div>
      <div class="modal-body">
        <form role="form" action="/auth/login" method="POST">
          <div class="form-group">
            <label for="authEmail"><span class="glyphicon glyphicon-user"></span> Email</label>
            <input type="email" class="form-control" name="email" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="authPassword"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
            <input type="password" class="form-control" name="password" placeholder="Enter password">
          </div>
          <button type="submit" class="btn btn-default btn-default btn-block modalButton"><span class="glyphicon glyphicon-off"></span> Login</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
        <p>Not a member? <a href="/auth/signup">Sign Up</a></p>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="signUpModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4><span class="glyphicon glyphicon-lock"></span> Sign Up</h4>
      </div>
      <div class="modal-body">
        <form role="form" action="/auth/signup" method="POST">
          <div class="form-group">
            <label for="authEmail"><span class="glyphicon glyphicon-user"></span> Email</label>
            <input type="email" class="form-control" name="email" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="authName">Name</label>
            <input class="form-control" type="text" name="name" placeholder="Enter name">
          </div>
          <div class="form-group">
            <label for="authPassword"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
            <input id="authPassword" type="password" class="form-control" name="password" placeholder="Enter password">
          </div>
          <div class="form-group">
            <label for="authPassword2"><span class="glyphicon glyphicon-eye-open"></span>Retype Password</label>
            <input id="confirmPassword" type="password" class="input-btm form-control" name="password2" placeholder="Enter Password">
            <span id='message'></span>
          </div>
          <button type="submit" class="btn btn-default btn-default btn-block modalButton"><span class="glyphicon glyphicon-off"></span> Sign up</button>
        </form>
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
      <p>Already a member? <a href="/auth/login">Log in</a></p>
    </div>
  </div>
  </div>
</div>
